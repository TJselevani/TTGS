                <td style="text-align:center">Unit Code</td>
                <td style="text-align:center">Unit Title</td>
            </tr>
            <%  if(unitInfo){
            unitInfo.forEach(untInfo => { %>
              <% if(untInfo.isAssigned == false  ) { %>
              <tr>
                <td> <input type="checkbox" name="selected" value=" <%= untInfo.code %>|<%= untInfo.name %> "> </td>
                <td>  <%= untInfo.code %> </td>
                <td>  <%= untInfo.name %> </td>
              </tr>
              <% } else { } %>
            <% }) }else {%>
              <p>Nothing to show</p>
              <%}%>

        </table>
      </form>
    </div>
