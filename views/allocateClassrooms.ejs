<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top " id="menu">    
    <div>
        <h2 >Allocate Units - Classroom Page</h2>
    </div>
  </nav>
  <div>
    <a href="/allocation">Back</a>
  </div>


<!-- ****************************************************** Semester 1 *****************************************-->
  <div  class="allotUnitForm" align="center">
    <P><strong>Year 1 Semester 1</strong></P>
    <form action=" " method="post" style="margin-top: 10px">
      <div style="margin-top: 5px">
        <select name="tobealloted" class="list-group-item" style="width: 100%; height: 50px;">
          <option selected disabled>Select Unit</option>
            <% unitInfo.forEach(untInfo => { %>
                <% if(untInfo.semester == 1) { %>
                    <option value=" "><%= untInfo.name %></option>
                <% } else {} %>
            <% }) %>
        </select>
      </div>
      <br>
      <div>
          <select name=" " class="list-group-item" style="width: 100%; height: 50px;">
              <option selected disabled>Select Classroom</option>
              <% classroomInfo.forEach(clssInfo => { %>
                  <option value=" "><%= clssInfo.name %></option>
              <% }) %>
          </select>
      </div>
      <div style="margin-top: 10px">
          <button type="submit" class="btn btn-success btn-lg">Allot</button>
      </div>
    </form>
  </div>
  
</body>
</html>